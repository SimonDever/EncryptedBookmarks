{
  "name": "Encrypted Bookmarks",
  "version": "3.0",
  "manifest_version": 2,
  "description": "Store private bookmarks encrypted in Chrome's local storage.",
  "background": {
    "scripts": ["/js/background.js", "/vendor/openpgpjs/openpgp.min.js"],
    "persistent": false
  },
  "icons": {
    "128": "/img/icon128.png"
  },
  "browser_action": {
    "name": "Open bookmarks."
  },
  "options_ui": {
    "page": "html/options.html"
  },
  "permissions": [
    "contextMenus",
    "storage",
    "tabs"
  ]
}
